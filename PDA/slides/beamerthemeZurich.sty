\mode<presentation>

\setbeamertemplate{frametitle}[default][center]

%\newif\ifbeamer@secheader
%\beamer@secheaderfalse

%\DeclareOptionBeamer{secheader}{\beamer@secheadertrue}
%\ProcessOptionsBeamer

\useoutertheme{default}

\usecolortheme{rose}        % rose, lily
\usecolortheme{dolphin}     % dolphin, seahorse

\useinnertheme{circles}
\setbeamertemplate{blocks}[rounded][shadow=true]

% fonts
\usefonttheme[onlylarge]{structurebold}
%\usepackage{mathptm}      % also try: mathptmx, mathptm, mathtime

% Tills' opinion: should be done in an inner theme, not here.
\usenavigationsymbolstemplate{} 

\useitemizeitemtemplate{%
    \large\raise.5pt\hbox{%\color{beamerstructure}
      $\bullet$}%
}
\usesubitemizeitemtemplate{%
    \scriptsize\raise.5pt\hbox{%\color{beamerstructure}
      $\bigstar$}%
}
\usesubsubitemizeitemtemplate{%
    \scriptsize\raise.5pt\hbox{%\color{beamerstructure}
      $\blacktriangleright$}%
}

%\setbeamersize{text margin left=2em,text margin right=2em}

%\ifbeamer@secheader\else\setbeamertemplate{headline}[default]\fi

\mode
<all>
